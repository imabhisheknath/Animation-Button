    xmlns:hoyo="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.hoyobutton.MainActivity">

    <com.example.administrator.hoyobutton.HoyoButton
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="#000000"
        android:textAllCaps="false"
        android:textColor="#fff"
        hoyo:animation="fadein"
        hoyo:animation_duration="2000"
        hoyo:shape="rect"
        hoyo:category="menu"
        hoyo:shape_stroke_width="10dp"
        hoyo:shape_color="#0105f9"
        hoyo:stroke_color="#f57a7a" />


