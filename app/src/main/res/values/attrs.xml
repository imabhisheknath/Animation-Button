<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="hoyo">
        <attr name="shadowEnabled" format="boolean" />
        <attr name="buttonColor" format="color" />
        <attr name="shadowHeight" format="dimension" />
        <attr name="cornerRadius" format="dimension" />

        <attr name="shape" format="enum">
            <enum name="circle" value="1" />
            <enum name="rect" value="2" />
        </attr>

        <attr name="animation_duration" format="integer" />

        <attr name="animation" format="enum">
            <enum name="fadein" value="1" />
            <enum name="fadeout" value="2" />
        </attr>


        <attr name="shape_color" format="color" />
        <attr name="stroke_color" format="color" />
        <attr name="shape_stroke_width" format="dimension" />


        <attr name="category" format="enum">
            <enum name="action" value="1" />
            <enum name="menu" value="2" />
        </attr>


      <!--  <attr name="OnClickSound" format="enum">
            <enum name="first" value="1" />
            <enum name="secound" value="2" />
        </attr>-->

    </declare-styleable>


    <style name="ShapeTheme">
        <item name="shape_color">#bb18ce</item>
        <item name="stroke_color">@color/colorPrimaryDark</item>
        <item name="shape_stroke_width">1dp</item>
    </style>

</resources>